<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:useDefaultMargins="true"
    tools:context="edu.hm.cs.ig.passbutler.backup.BackupActivity">

    <Button
        android:id="@+id/backup_create_backup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backup_activity_create_backup_button_label"
        android:onClick="createBackupButtonClick"/>

    <Button
        android:id="@+id/backup_import_backup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backup_activity_import_backup_button_label"
        android:onClick="importBackupButtonClick"/>


    <TextView
        android:id="@+id/backup_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
