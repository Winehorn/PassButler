<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.hm.cs.ig.passbutler.PasswordGeneratorActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tv_password_generator_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="143dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:singleLine="true"
        android:text="@string/password_generator_default_text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/sb_password_generator_length"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/sw_password_generator_lowercase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="3dp"
        android:checked="true"
        android:text="@string/password_generator_lowercase_label"
        app:layout_constraintBottom_toTopOf="@+id/sw_password_generator_uppercase"
        app:layout_constraintStart_toStartOf="@+id/sw_password_generator_uppercase" />

    <Switch
        android:id="@+id/sw_password_generator_uppercase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:checked="true"
        android:text="@string/password_generator_uppercase_label"
        app:layout_constraintBottom_toBottomOf="@+id/sw_password_generator_special"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sw_password_generator_special" />

    <Switch
        android:id="@+id/sw_password_generator_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="29dp"
        android:checked="true"
        android:text="@string/password_generator_numbers_label"
        app:layout_constraintEnd_toEndOf="@+id/sw_password_generator_special"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_generator_password" />

    <Switch
        android:id="@+id/sw_password_generator_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginTop="24dp"
        android:checked="true"
        android:text="@string/password_generator_special_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sw_password_generator_numbers" />

    <SeekBar
        android:id="@+id/sb_password_generator_length"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="252dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_generator_password"
        app:layout_constraintVertical_bias="0.34" />

    <Button
        android:id="@+id/bt_password_generator_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="164dp"
        android:text="@string/password_generator_generate_button_label"
        android:onClick="generateButtonOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
